
{
  "compilerOptions": {
    "target": "es6",
    "module": "none",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public/js",
    "rootDir": "./src/ts",
    "lib": [
      "dom",
      "es2019"
    ]
  },
  "include": [
    "src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
